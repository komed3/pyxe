{
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/libraries/*",
    "packages/modules/*",
    "packages/pyxe",
    "packages/spaces/*",
    "packages/types",
    "packages/utils"
  ],
  "type": "module",
  "scripts": {
    "clean": "node ./scripts/build.mjs --clean",
    "build": "node ./scripts/build.mjs --force",
    "build:only": "node ./scripts/build.mjs --force --no-clean",
    "build:dry": "node ./scripts/build.mjs --dry-run",
    "build:ci": "node ./scripts/build.mjs --force --ci --strict",
    "build:watch": "node ./scripts/build.mjs --force --watch",
    "analyze": "node ./scripts/analyze.mjs"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}