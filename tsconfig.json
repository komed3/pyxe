{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "pyxe": [ "packages/pyxe/src" ],
      "@pyxe/core": [ "packages/core/src" ],
      "@pyxe/core/*": [ "packages/core/src/*" ],
      "@pyxe/library-ral": [ "packages/libraries/ral/src" ],
      "@pyxe/types": [ "packages/types/src" ],
      "@pyxe/space-hsi": [ "packages/spaces/hsi/src" ],
      "@pyxe/space-hsl": [ "packages/spaces/hsl/src" ],
      "@pyxe/space-hsv": [ "packages/spaces/hsv/src" ],
      "@pyxe/space-lrgb": [ "packages/spaces/lrgb/src" ],
      "@pyxe/space-rgb": [ "packages/spaces/rgb/src" ],
      "@pyxe/space-xyz": [ "packages/spaces/xyz/src" ],
      "@pyxe/utils": [ "packages/utils/src" ]
    },
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "dist",
    "strict": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true
  }
}