{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "pyxe": [ "packages/pyxe/src" ],
      "@pyxe/core": [ "packages/core/src" ],
      "@pyxe/types": [ "packages/types/src" ]
    },
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "dist",
    "strict": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true
  }
}