{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@pyxe/core": [ "packages/core/src" ],
      "@pyxe/core/*": [ "packages/core/src/*" ],
      "@pyxe/pyxe": [ "packages/pyxe/src" ],
      "@pyxe/types": [ "packages/types/src" ],
      "@pyxe/spaces/hsl": [ "packages/spaces/hsl/src" ],
      "@pyxe/spaces/hsv": [ "packages/spaces/hsv/src" ],
      "@pyxe/spaces/rgb": [ "packages/spaces/rgb/src" ],
      "@pyxe/utils": [ "packages/utils/src" ]
    },
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "dist",
    "strict": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true
  }
}